<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="postModel"
            type="com.e.demoaplplication.bean.PostModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/item_activity"
        android:layout_margin="20dp"
        tools:context=".ItemActivity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{postModel.name}"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/itemName"/>match_parent
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{postModel.login}"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/itemLogin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{postModel.company}"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/itemcompany"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{postModel.email}"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/itememail"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{postModel.followerUrl}"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:id="@+id/itemfollowerUrl"/>

        <ImageView
            android:id="@+id/avatarUrl"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>

